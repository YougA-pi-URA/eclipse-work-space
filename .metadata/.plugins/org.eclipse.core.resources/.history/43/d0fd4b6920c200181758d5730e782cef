package mycalculator.utility;

public class ViewRegenerate {

	public Register register = new Register();

	public ViewRegenerate(Register register){

		String symbol = register.operatorSymbol;
		String regA = register.regA;
		String regB = register.regB;
		int mode = register.operationMode;

		register.calculationLabel.setText(regA + symbol + regB + " ");

		if(regB != ""){
			register.numberLabel.setText(regB + " ");
		}else if(regA != ""){
			register.numberLabel.setText(regA + " ");
		}else{
			register.numberLabel.setText("0 ");
		}
		if(mode == 0){
			regA = "";
		}

		this.register = register;

	}


}
