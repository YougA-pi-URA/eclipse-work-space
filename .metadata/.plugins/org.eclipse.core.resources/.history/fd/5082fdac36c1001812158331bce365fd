package mycalculator.function;

import mycalculator.utility.ViewRegenerate;

public class NumberInput {

	private boolean isZero;
	private boolean dotUsed;
	private String regB;

	public NumberInput(int status){
		switch(status){
		case 0:	if(isZero == false || dotUsed == true){
					regB += "0";
				}
				break;

		case 10:if(dotUsed == false){
					if(isZero ==true){
						regB += "0";
					}
					regB += ".";
					dotUsed = true;
				}
				break;

		default:regB += String.valueOf(status);
				isZero = false;
				break;
		}
		new ViewRegenerate();
	}


}
