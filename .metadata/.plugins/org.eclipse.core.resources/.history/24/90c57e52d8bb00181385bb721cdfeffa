	public void selectMode(int mode){
		if(!(mode ==4 || mode == 5)|| isZero == false){

			mod = 0;
			a = Double.parseDouble(regA);
			if(isZero == true){
				b = 0;
			}else{
				b = Double.parseDouble(regB);
			}

			switch(mode){
			case 0:	a = b;
					break;

			case 1:	a += b;
			modeTag = "＋";
					break;

			case 2:	a -= b;
					break;

			case 3:	a *= b;
					break;

			case 4:	a /= b;
					break;

			case 5:	mod = (int) (a % b);
					a = (int) (a / b);
					modulo = "あまり " + String.valueOf(mod);
					break;
			}
			regA = String.valueOf(a) + " ";
			if(!(modeTag.isEmpty())){
				regA = regA + modeTag + " ";
			}
		}
	}

	public void infoRegen() {
		if(memory!=0){
			info = "M = " + String.valueOf(memory);
		}else{
			info = "";
		}
	}

