package mycalculator.config;

import mycalculator.function.ClearAction;
import mycalculator.function.MemoryAction;
import mycalculator.function.NumberAction;
import mycalculator.function.OperatorAction;
import mycalculator.function.TransformAction;
import mycalculator.utility.FunctionAllocator;
import mycalculator.utility.Register;

public class FunctionAllocation {

	FunctionAllocator allocator = new FunctionAllocator();

	public void allocate(Register register, int functionId, int status){

		allocator.functionId = functionId;
		allocator.status = status;

		switch(allocator.functionId){
		case 0:	new ClearAction(register);
				break;

		case 1:	new NumberAction(register,allocator.status);
				break;

		case 2:	new OperatorAction(register,allocator.status);
				break;

		case 3:	new TransformAction(register,allocator.status);
				break;

		case 4:	new MemoryAction(register,allocator.status);
				break;
		}

	}

}
