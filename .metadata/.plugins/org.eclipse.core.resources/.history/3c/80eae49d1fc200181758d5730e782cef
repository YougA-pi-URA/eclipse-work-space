package mycalculator.utility;

public class Register {

	private String memoryInfo;
	private String calculationInfo;
	private String remainderInfo;
	private String numberInfo;
	private String operatorSymbol;
	private String regA;
	private String regB;
	private short operationMode;
	private double memory;
	private double remainder;
	private boolean isZero;
	private boolean dotUsed;

	public Register(){
		memoryInfo = "";
		remainderInfo = "";
		operatorSymbol = "";
		regA = "";
		regB = "";
		operationMode = 0;
		memory = 0;
		remainder = 0;
		isZero = true;
		dotUsed = false;
	}

	public void addRegB(String input) {
		this.regB += input;
	}
	/**
	 * memoryInfoを取得します。
	 * @return memoryInfo
	 */
	public String getMemoryInfo() {
	    return memoryInfo;
	}

	/**
	 * memoryInfoを設定します。
	 * @param memoryInfo memoryInfo
	 */
	public void setMemoryInfo(String memoryInfo) {
	    this.memoryInfo = memoryInfo;
	}

	/**
	 * calculationInfoを取得します。
	 * @return calculationInfo
	 */
	public String getCalculationInfo() {
	    return calculationInfo;
	}

	/**
	 * calculationInfoを設定します。
	 * @param calculationInfo calculationInfo
	 */
	public void setCalculationInfo(String calculationInfo) {
	    this.calculationInfo = calculationInfo;
	}

	/**
	 * remainderInfoを取得します。
	 * @return remainderInfo
	 */
	public String getRemainderInfo() {
	    return remainderInfo;
	}

	/**
	 * remainderInfoを設定します。
	 * @param remainderInfo remainderInfo
	 */
	public void setRemainderInfo(String remainderInfo) {
	    this.remainderInfo = remainderInfo;
	}

	/**
	 * numberInfoを取得します。
	 * @return numberInfo
	 */
	public String getNumberInfo() {
	    return numberInfo;
	}

	/**
	 * numberInfoを設定します。
	 * @param numberInfo numberInfo
	 */
	public void setNumberInfo(String numberInfo) {
	    this.numberInfo = numberInfo;
	}

	/**
	 * operatorSymbolを取得します。
	 * @return operatorSymbol
	 */
	public String getOperatorSymbol() {
	    return operatorSymbol;
	}

	/**
	 * operatorSymbolを設定します。
	 * @param operatorSymbol operatorSymbol
	 */
	public void setOperatorSymbol(String operatorSymbol) {
	    this.operatorSymbol = operatorSymbol;
	}

	/**
	 * regAを取得します。
	 * @return regA
	 */
	public String getRegA() {
	    return regA;
	}

	/**
	 * regAを設定します。
	 * @param regA regA
	 */
	public void setRegA(String regA) {
	    this.regA = regA;
	}

	/**
	 * regBを取得します。
	 * @return regB
	 */
	public String getRegB() {
	    return regB;
	}

	/**
	 * regBを設定します。
	 * @param regB regB
	 */
	public void setRegB(String regB) {
	    this.regB = regB;
	}

	/**
	 * operationModeを取得します。
	 * @return operationMode
	 */
	public short getOperationMode() {
	    return operationMode;
	}

	/**
	 * operationModeを設定します。
	 * @param operationMode operationMode
	 */
	public void setOperationMode(short operationMode) {
	    this.operationMode = operationMode;
	}

	/**
	 * memoryを取得します。
	 * @return memory
	 */
	public double getMemory() {
	    return memory;
	}

	/**
	 * memoryを設定します。
	 * @param memory memory
	 */
	public void setMemory(double memory) {
	    this.memory = memory;
	}

	/**
	 * remainderを取得します。
	 * @return remainder
	 */
	public double getRemainder() {
	    return remainder;
	}

	/**
	 * remainderを設定します。
	 * @param remainder remainder
	 */
	public void setRemainder(double remainder) {
	    this.remainder = remainder;
	}

	/**
	 * isZeroを取得します。
	 * @return isZero
	 */
	public boolean isZero() {
	    return isZero;
	}

	/**
	 * isZeroを設定します。
	 * @param isZero isZero
	 */
	public void setZero(boolean isZero) {
	    this.isZero = isZero;
	}

	/**
	 * dotUsedを取得します。
	 * @return dotUsed
	 */
	public boolean isDotUsed() {
	    return dotUsed;
	}

	/**
	 * dotUsedを設定します。
	 * @param dotUsed dotUsed
	 */
	public void setDotUsed(boolean dotUsed) {
	    this.dotUsed = dotUsed;
	}

}
