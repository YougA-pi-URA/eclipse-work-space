package mycalculator.utility;

import javax.swing.JLabel;

public class Register {

	public JLabel memoryLabel;
	public JLabel calculationLabel;
	public JLabel remainderLabel;
	public JLabel numberLabel;

	public String operatorSymbol;
	public String regA;
	public String regB;
	public int operationMode;
	public double memory;
	public double remainder;
	public boolean isZero;
	public boolean dotUsed;

	public Register(){
		memoryLabel.setText("");
		remainderLabel.setText("");
		operatorSymbol = "";
		regA = "";
		regB = "";
		operationMode = 0;
		memory = 0;
		remainder = 0;
		isZero = true;
		dotUsed = false;
	}

	public void addRegB(String input) {
		this.regB += input;
	}
}
