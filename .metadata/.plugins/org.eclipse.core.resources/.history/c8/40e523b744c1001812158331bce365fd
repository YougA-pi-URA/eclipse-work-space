package mycalculator.function;

import javax.swing.JLabel;

import mycalculator.utility.ViewRegenerate;

public class ClearAction {

	private String regB;
	private String regA;
	private int mode;
	private String modeTag;
	private JLabel calculation;
	private JLabel moduloInfo;
	private JLabel result;
	private boolean isZero;
	private boolean dotUsed;

	public ClearAction(){

		if(regB.isEmpty()){
			regA = "";
			mode = 0;
			modeTag = "";
			calculation.setText("");
			moduloInfo.setText("");
			result.setText("0 ");
		}else{
			regB = "";
			isZero = true;
			dotUsed = false;
			new ViewRegenerate();
		}

	}

}
