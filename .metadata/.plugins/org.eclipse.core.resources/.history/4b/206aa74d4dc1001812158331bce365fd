package mycalculator.function;

import mycalculator.utility.Register;
import mycalculator.utility.ViewRegenerate;

public class NumberAction {

	public NumberAction(Register register, int status){

		switch(status){
		case 0:	if(register.isZero() == false || register.isDotUsed() == true){
					register.addRegB("0");
				}
				break;

		case 10:if(register.isDotUsed() == false){
					if(register.isZero() ==true){
						register.addRegB("0");
					}
					register.addRegB(".");
					register.setDotUsed(true);
				}
				break;

		default:register.addRegB(String.valueOf(status));
				register.setZero(false);
				break;
		}
		new ViewRegenerate();
	}


}
